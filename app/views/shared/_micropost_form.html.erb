<%= form_for(@micropost) do |f| %>
	<!--passes the form object to _error_messages.rb -->
	<%= render 'shared/error_messages', object: f.object %> 
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose a new micropost..." %>
	</div>
	<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>